<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_word_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/word_home_item" />

    <TextView
        android:id="@+id/home_not_set_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/not_set_info"
        android:layout_margin="24dp"
        android:visibility="gone"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_not_set_resources"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/not_set_resources"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textIsSelectable="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home_not_set_info" />

</androidx.constraintlayout.widget.ConstraintLayout>
